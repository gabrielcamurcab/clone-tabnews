{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Um projeto para aprender a programar com mais eficiÃªncia, como o Filipe Deschamps.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint --fix",
    "test": "npm run docker && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "docker": "docker compose -f infra/compose.yaml up -d",
    "docker:watch": "docker compose -f infra/compose.yaml up",
    "docker:stop": "docker compose -f infra/compose.yaml stop",
    "docker:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "commitizen": "^4.3.1",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "16.1.6",
    "node-pg-migrate": "6.2.2",
    "pg": "8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.12.2",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
